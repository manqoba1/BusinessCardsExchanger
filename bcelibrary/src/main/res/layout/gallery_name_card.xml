<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bsCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="1dp"
    android:background="@color/blue_gray_100"
    app:cardCornerRadius="4dp"
    android:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/GNC_map"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_dialog_map" />

        <TextView
            android:id="@+id/GNC_locationName"
            style="@style/GrayMediumText"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/GNC_map"
            android:layout_toRightOf="@+id/GNC_map"
            android:gravity="center_vertical"
            android:text="Medium Text" />

        <TextView
            android:id="@+id/GNC_date_time"
            style="@style/Title2TextStyleWhileSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/GNC_locationName"
            android:layout_toEndOf="@+id/GNC_map"
            android:layout_toRightOf="@+id/GNC_map"
            android:padding="8dp"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/green_300" />

        <TextView
            android:id="@+id/GNC_message"
            style="@style/Title2TextStyleWhileSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/GNC_date_time"
            android:layout_toEndOf="@+id/GNC_map"
            android:layout_toRightOf="@+id/GNC_map"
            android:padding="8dp"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/blue_gray_300" />


    </RelativeLayout>
</android.support.v7.widget.CardView>

