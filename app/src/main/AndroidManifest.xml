<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="codetribe.sifiso.com.businesscardsexchanger">

    <uses-permission android:name="android.permission.NFC" />

    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".MainLandActivity"
            android:label="@string/title_activity_main_land"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GalleryListActivity"
            android:label="@string/title_activity_gallery_list"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".FullViewActivity"
            android:label="@string/title_activity_full_view"
            android:theme="@style/AppTheme">

        </activity>
    </application>

</manifest>
